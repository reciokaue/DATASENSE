{
  "extends":"@rocketseat/eslint-config/react",
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": "error",
    "camelcase": "off",
    "@typescript-eslint/no-explicit-any": "off"
  },
  "settings": {
    "tailwindcss": {
      "callees": ["cn"],
      "config": "tailwind.config.js"
    },
    "next": {
      "rootDir": true
    }
  }
}
